<div class="header">
  <div class="title">Games</div>
</div>

<div class="spacer">
</div>

<div class="form">

  <table class="game-table">
  <tr>
    <th>Title</th>
    <th>Action</th>
  </tr>
  <% @games.each do |game| %>
  <tr>
    <td><%= game.title %> </td>
    <td><%= link_to 'Show', game_path(game) %> | 
    <%= link_to 'Edit', edit_game_path(game) %> | 
    <%= link_to 'Delete', game_path(game),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>

    <br>
  <% end %>
  </table>
  <br><br>

  <%= link_to 'Games', controller: 'games' %><br>
  <%= link_to 'New Game', new_game_path %>
</div>